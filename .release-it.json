{
  "git": {
    "commitMessage": "Craft v${version} release",
    "requireCleanWorkingDir": true,
    "tagAnnotation": "Release v${version}",
    "tagName": "v${version}",
    "commit": true,
    "tag": true,
    "push": true
  },
  "hooks": {
    "after:bump": "npm run build"
  },
  "npm": {
    "publishArgs": ["--provenance"],
    "skipChecks": true,
    "publish": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "angular"
      },
      "infile": "CHANGELOG.md"
    }
  }
}
