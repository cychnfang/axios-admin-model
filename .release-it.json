{
  "git": {
    "commitMessage": "Craft v${version} release",
    "requireCleanWorkingDir": true,
    "tagAnnotation": "Release v${version}",
    "tagName": "v${version}"
  },
  "github": {
    "draft": true,
    "release": true,
    "releaseName": "v${version}"
  },
  "hooks": {
    "after:bump": "npm run build"
  },
  "npm": {
    "publishArgs": ["--provenance"],
    "skipChecks": true
  }
}
